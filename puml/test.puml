@startuml
actor "Пользователь 1" as user1
actor "Пользователь 2" as user2
participant "GUI" as gui
participant "Сжатие и Шифровка" as compress
participant "Расшифровка и Распаковка" as decompress

user1 -> gui: запрос
gui -> compress: данные
compress -> decompress: сжатые и зашифрованные данные
decompress -> gui: расшифрованные и распакованные данные
gui -> user1: ответ

user2 -> gui: запрос
gui -> compress: данные
compress -> decompress: сжатые и зашифрованные данные
decompress -> gui: расшифрованные и распакованные данные
gui -> user2: ответ
@enduml

@startuml
skinparam componentStyle rectangle

component "GUI Application" as gui

together {
  component "Compression, Encoding" as compress_encode
  component "Decryption, Unpacking" as decrypt_unpack
}

gui --> compress_encode : requests
gui --> decrypt_unpack : requests

compress_encode -[hidden]- decrypt_unpack
@enduml

@startuml
skinparam componentStyle rectangle

component "Security Tool" as tool

together {
  component "Archive Compressor\n& Encryptor" as archiver
  component "File Decryptor\n& Extractor" as extractor
}

component "Secure Storage" as secure_storage

tool --> archiver : compress & encrypt
tool --> extractor : decrypt & extract
archiver --> secure_storage
extractor --> secure_storage

archiver -[hidden]- extractor
@enduml

